<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.ecart">

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_add_shopping_cart_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_add_shopping_cart_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.test.ecart.AddItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.test.ecart.AdminMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.test.ecart.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.test.ecart.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.test.ecart.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.test.ecart.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.test.ecart.OrdersActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>